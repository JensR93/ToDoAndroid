<?xml version="1.0" encoding="utf-8"?>

<GridLayout android:orientation="horizontal"
    android:gravity="top"
    android:layout_weight="1"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:duplicateParentState="true"
    android:rowCount="4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.AppCompatCheckBox
    android:focusable="false"
    android:id="@+id/itemReady"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="0">
</androidx.appcompat.widget.AppCompatCheckBox>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemName"
        android:minWidth="200dp"

        android:maxWidth="330dp"
        android:textSize="30dp"
        android:layout_row="0"
        android:layout_width="280dp"
        android:layout_column="2"
        android:width="96px"
        android:layout_height="wrap_content"></TextView>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:focusable="false"
        android:button="@drawable/custom_checkbox"
        android:layout_column="1"

        android:layout_row="0"
        android:id="@+id/itemFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatCheckBox>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_column="2"
        android:layout_row="2"
        android:id="@+id/itemDescriptionLayout"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_description_black_18dp">
        </androidx.appcompat.widget.AppCompatImageView>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemDescription"
        android:minWidth="200dp"
        android:maxWidth="330dp"
        android:textSize="12dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_column="2"
        android:layout_row="1"
        android:id="@+id/itemExiryLayout"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_event_black_18"></androidx.appcompat.widget.AppCompatImageView>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemExiry"
        android:minWidth="200dp"
        android:maxWidth="330dp"
        android:textSize="12dp"
        android:layout_width="230dp"

        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_column="2"
        android:layout_row="3"
        android:id="@+id/itemContactsLayout"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_contacts_black_18">
        </androidx.appcompat.widget.AppCompatImageView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/itemContacts"
            android:minWidth="200dp"
            android:maxWidth="330dp"
            android:textSize="12dp"
            android:layout_width="230dp"

            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    </GridLayout>
